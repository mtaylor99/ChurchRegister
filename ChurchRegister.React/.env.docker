# ===================================
# Church Register - Docker Local Environment
# ===================================
# 
# Used for local Docker deployment where React and API
# are served from the same origin (http://localhost:5000)
# ===================================

# -----------------------------------
# API Configuration
# -----------------------------------
# Use relative URL since React is served by the same API server
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# -----------------------------------
# Authentication
# -----------------------------------
VITE_AUTH_TOKEN_KEY=churchregister_auth_token
VITE_AUTH_REFRESH_KEY=churchregister_refresh_token

# -----------------------------------
# Feature Flags
# -----------------------------------
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=true

# -----------------------------------
# UI Configuration
# -----------------------------------
VITE_APP_NAME=Church Register
VITE_PAGINATION_DEFAULT_PAGE_SIZE=10
VITE_MAX_FILE_UPLOAD_SIZE=5242880

# -----------------------------------
# Session Configuration
# -----------------------------------
VITE_SESSION_TIMEOUT_WARNING_MINUTES=5
VITE_SESSION_TIMEOUT_MINUTES=60
