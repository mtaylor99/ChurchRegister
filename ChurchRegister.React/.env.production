# ===================================
# Church Register - Production Environment
# ===================================
# 
# NOTE: Override these with environment variables in your deployment platform
# (Azure App Service, Vercel, Netlify, etc.)
# ===================================

# -----------------------------------
# API Configuration
# -----------------------------------
VITE_API_BASE_URL=https://api.churchregister.com
VITE_API_TIMEOUT=30000

# -----------------------------------
# Authentication
# -----------------------------------
VITE_AUTH_TOKEN_KEY=churchregister_auth_token
VITE_AUTH_REFRESH_KEY=churchregister_refresh_token

# -----------------------------------
# Environment
# -----------------------------------
VITE_NODE_ENV=production

# -----------------------------------
# Feature Flags
# -----------------------------------
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_STORYBOOK=false

# -----------------------------------
# Monitoring & Analytics
# -----------------------------------
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LOGGING=false
VITE_SENTRY_DSN=

# -----------------------------------
# Debug
# -----------------------------------
VITE_DEBUG_MODE=false